<Application
    x:Class="car_playwright_wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ResourceDictionary>
            <!--  PopupActivation="DoubleClick"  -->
            <!--  DoubleClickCommand="{Binding OpenMainWindowCommand}"  -->
            <tb:TaskbarIcon
                x:Key="TrayIcon"
                IconSource="/Resources/icon.ico"
                ToolTipText="用车复核工具"
                TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding OpenCommand}" Header="打开主窗口" />
                        <MenuItem Command="{Binding RestartCommand}" Header="重启程序" />
                        <Separator />
                        <MenuItem Command="{Binding ToggleTaskCommand}" Header="开关定时任务" />
                        <Separator />
                        <MenuItem Command="{Binding ExitCommand}" Header="退出程序" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
